#include <iostream>
#include <cmath>
using namespace std;
bool isArmstrong(int n) {
  int num = n;
  int digits = 0;
  while (n > 0) {
    digits++;
    n /= 10;
  }
  n = num;
  int sum = 0;
  while (n > 0) {
    sum += pow(n % 10, digits);
    n /= 10;
  }
  return sum == num;
}

int main() {
  cout << "The Armstrong numbers from 1 to 100 are:" << endl;
  for (int i = 1; i <= 100; i++) {
    if (isArmstrong(i)) {
      cout << i << " ";
    }
  }
  cout << endl;
  return 0;
}
