#include <iostream>
using namespace std;
int reverse(int n) {
  int rev = 0;
  while (n > 0) { 
 rev = rev * 10 + n % 10;
    n /= 10;
  }
  return rev;
}

int main() {
  int num = 56789;
  cout << "The number is " << num << endl;
  cout << "The reverse of " << num << " is " << reverse(num) << endl;
  return 0;
}
