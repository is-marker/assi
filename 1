#include <iostream>
#include <bitset>
using namespace std;

int main() {

  int bin = 101;
  int dec = 6;
  cout << "The binary number " << bin << " is " << bitset<100>(bin).to_ulong() << " in decimal." << endl;
  cout << "The decimal number " << dec << " is " << bitset<100>(dec) << " in binary." << endl;
  return 0;
}

