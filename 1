#include <iostream>
using namespace std;
int sumOfDigits(int n) {
  int sum = 0;
  while (n > 0) {
    
    sum += n % 10;
    
    n /= 10;
  }
  return sum;
}

int main() {
  int arr[] = {12, 34, 56, 78,90};
  int size = sizeof(arr) / sizeof(arr[0]);
  int index = 2;
  if (index >= 0 && index < size) {
    cout << "The element at index " << index << " is " << arr[index] << endl;
    cout << "The sum of digits of " << arr[index] << " is " << sumOfDigits(arr[index]) << endl;
  } 
  else {
    cout << "Invalid index" << endl;
  }
  return 0;
}
